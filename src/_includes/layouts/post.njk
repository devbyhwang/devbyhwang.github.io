---
layout: layouts/base.njk
---
<article class="post">
  <header class="post-header">
    <span class="post-category">{{ category or 'notes' }}</span>
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <span class="post-date">{{ date | readableDate }}</span>
      <span class="post-author">by {{ site.author }}</span>
    </div>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
        <a class="tag" href="{{ ('/tags/' + (tag | slugify) + '/') | url }}">{{ tag }}</a>
      {% endfor %}
    </div>
    {% endif %}
  </footer>

  {% include "ad-slot.njk" %}

</article>
