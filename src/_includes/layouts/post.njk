---
layout: layouts/base.njk
---
<section class="post-shell">
  <a class="back-link" href="{{ '/blog/' | url }}">← 블로그로 돌아가기</a>
  <div class="post-header">
    <span class="badge">{{ category or 'notes' }}</span>
    <h1>{{ title }}</h1>
    <div class="post-meta">{{ date | readableDate }} · {{ readingTime or '3 min read' }}</div>
  </div>
  <article class="prose">
    {{ content | safe }}
  </article>
  <div class="post-footer">
    <div class="muted">Powered by Eleventy · GitHub Pages</div>
  </div>
  {% include "ad-slot.njk" %}
</section>
