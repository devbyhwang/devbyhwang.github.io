---
layout: layouts/base.njk
title: 프로젝트
description: "진행 중인 게임"
---
<section class="projects-page">
  <header class="page-header">
    <h1>프로젝트</h1>
    <p class="lede">진행 중인 게임</p>
  </header>

  <div class="project-grid">
    {% for project in studio.games %}
      {% if project.type != 'demo' %}
        <article class="project-card">
          <div class="project-meta">
            <span class="badge">{{ project.status }}</span>
            <span class="pill">{{ project.role }}</span>
          </div>
          <h3>{{ project.title }}</h3>
          <p class="muted">{{ project.blurb }}</p>
          <div class="tag-row">
            {% for tag in project.tags %}<span class="tag">{{ tag }}</span>{% endfor %}
          </div>
          <div class="inline-links">
            {% for link in project.links %}
              <a href="{{ link.href | url }}">
                {{ link.label }}
              </a>
            {% endfor %}
          </div>
        </article>
      {% endif %}
    {% endfor %}
  </div>
</section>
