---
layout: layouts/base.njk
title: Playground
description: "이것저것 만들어보고 올려두는 공간"
---
<section class="playground-page">
  <header class="page-header">
    <h1>Playground</h1>
    <p class="lede">이것저것 만들어보고 올려두는 공간</p>
  </header>

  {% set playgroundItems = [] %}
  {% for project in studio.games %}
    {% if project.type == 'demo' %}
      {% set playgroundItems = (playgroundItems.push(project), playgroundItems) %}
    {% endif %}
  {% endfor %}

  <div class="playground-grid">
    {% for item in playgroundItems %}
      <article class="playground-card card-link-wrap">
        {% set cardSlug = item | cardSlug %}
        {% if cardSlug %}
          <a class="card-link" href="{{ ('/cards/' + cardSlug + '/') | url }}" aria-label="{{ item.title }} 프리뷰 보기"></a>
        {% endif %}
        {% if item.preview %}
        <div class="card-preview">
          <img src="{{ item.preview | url }}" alt="{{ item.title }} 프리뷰" loading="lazy" />
        </div>
        {% endif %}
        <div class="project-meta">
          {% if item.status %}<span class="badge">{{ item.status }}</span>{% endif %}
          {% if item.role %}<span class="pill">{{ item.role }}</span>{% endif %}
        </div>
        <h3>{{ item.title }}</h3>
        <p class="muted">{{ item.blurb }}</p>
        {% if item.tags.length %}
        <div class="tag-row">
          {% for tag in item.tags %}
            <a class="tag" href="{{ ('/tags/' + (tag | slugify) + '/') | url }}">{{ tag }}</a>
          {% endfor %}
        </div>
        {% endif %}
        {% if item.links.length %}
        <div class="inline-links">
          {% for link in item.links %}
            <a href="{{ link.href | url }}" target="_blank" rel="noopener">
              {{ link.label }} →
            </a>
          {% endfor %}
        </div>
        {% endif %}
      </article>
    {% endfor %}
  </div>
</section>
